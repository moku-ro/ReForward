<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>
<body>
    <h1>Dashboard</h1>
    <form id="configForm">
        <label for="arteChannelId">ID del canal de arte:</label>
        <input type="text" id="arteChannelId" name="arteChannelId" value="<%= config.arteChannelId %>"><br><br>
        
        <label for="anunciosChannelId">ID del canal de anuncios:</label>
        <input type="text" id="anunciosChannelId" name="anunciosChannelId" value="<%= config.anunciosChannelId %>"><br><br>
        
        <label for="keywords">Palabras clave (separadas por comas):</label>
        <input type="text" id="keywords" name="keywords" value="<%= config.keywords.join(', ') %>"><br><br>
        
        <button type="submit">Actualizar configuraci√≥n</button>
    </form>

    <script>
        document.getElementById('configForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const response = await fetch('/update-config', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(Object.fromEntries(formData)),
            });
            const result = await response.json();
            alert(result.message || result.error);
        });
    </script>
</body>
</html>